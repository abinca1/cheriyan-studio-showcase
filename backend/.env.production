# Production Environment Configuration
ENVIRONMENT=production
DEBUG=false

# Database - Use PostgreSQL or MySQL in production
# DATABASE_URL=postgresql://user:password@localhost/cheriyan_studio
DATABASE_URL=sqlite:///./cheriyan_studio.db

# Security - MUST CHANGE THESE IN PRODUCTION!
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-MIN-32-CHARACTERS
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Only allow your production domains
ALLOWED_HOSTS=https://yourdomain.com,https://www.yourdomain.com
ALLOW_CORS=true

# File Upload
UPLOAD_DIR=app/static/images
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp

# Server
HOST=0.0.0.0
PORT=8000
